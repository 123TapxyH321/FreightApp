@page
@model CreateUserModel
@{
    ViewData["Title"] = "Создать пользователя";
}

<h2>Создать нового пользователя</h2>

<form method="post" class="mt-4">
    <div class="mb-3">
        <label asp-for="User.Login" class="form-label">Логин</label>
        <input asp-for="User.Login" class="form-control" />
        <span asp-validation-for="User.Login" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.Password" class="form-label">Пароль</label>
        <input asp-for="User.Password" type="password" class="form-control" />
        <span asp-validation-for="User.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.UserName" class="form-label">Имя</label>
        <input asp-for="User.UserName" class="form-control" />
        <span asp-validation-for="User.UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="User.IdRole" class="form-label">Роль</label>
        <select asp-for="User.IdRole" class="form-select" asp-items="Model.RoleOptions">
            <option disabled selected>Выберите роль</option>
        </select>
        <span asp-validation-for="User.IdRole" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Создать</button>
    <a asp-page="/Admin/Users" class="btn btn-secondary">Отмена</a>
</form>
