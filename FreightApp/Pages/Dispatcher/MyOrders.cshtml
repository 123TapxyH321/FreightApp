@page
@model DispatcherMyOrdersModel
@{
    ViewData["Title"] = "Заказы диспетчера";
}

<h2>Мои заказы</h2>

@if (Model.MyOrders.Any())
{
    <table class="table table-sm table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Откуда</th>
                <th>Куда</th>
                <th>Описание</th>
                <th>Статус</th>
                <th class="text-end">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model.MyOrders)
            {
                var rowClass = o.Status switch
                {
                    "Отклонён водителем" => "table-danger",
                    "Доставлен" => "table-success",
                    "В пути" => "table-warning",
                    _ => ""
                };

                <tr class="@rowClass">
                    <td>@o.StoreOut</td>
                    <td>@o.StoreIn</td>
                    <td>@o.Note</td>
                    <td>@o.Status</td>
                    <td class="text-end">
                        @if (o.Status == "Доставлен")
                        {
                            <form method="post" asp-page-handler="Complete" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="orderId" value="@o.OrderId" />
                                <input type="hidden" name="headId" value="@o.HeadId" />
                                <button type="submit" class="btn btn-sm btn-primary">Завершить</button>
                            </form>
                        }
                        @if (o.Status == "Принят диспетчером" || o.Status == "Отклонён водителем")
                        {
                            <form method="post" asp-page-handler="AssignDriver" class="d-inline ms-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="orderId" value="@o.OrderId" />
                                <input type="hidden" name="headId" value="@o.HeadId" />
                                <select name="driverId" class="form-select form-select-sm d-inline-block" style="width: 220px;">
                                    @foreach (var d in Model.Drivers)
                                    {
                                        <option value="@d.Id" selected="@(o.CurrentDriverId == d.Id)">@d.Name</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-sm btn-outline-secondary ms-1">Назначить</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-secondary">Нет заказов в работе.</div>
}
