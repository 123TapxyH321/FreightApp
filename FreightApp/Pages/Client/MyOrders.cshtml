@page
@model ClientMyOrdersModel
@{
    ViewData["Title"] = "Мои заказы";
}

<h2>Мои заказы</h2>

@if (Model.MyOrders.Any())
{
    <table class="table table-sm table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Откуда</th>
                <th>Куда</th>
                <th>Описание</th>
                <th>Статус</th>
                <th class="text-end">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model.MyOrders)
            {
                var rowClass = o.Status switch
                {
                    "Отклонён водителем" => "table-danger",
                    "Принят диспетчером" => "table-warning",
                    "Назначен водителю" => "table-warning",
                    _ => ""
                };
                <tr class="@rowClass">
                    <td>@o.StoreOut</td>
                    <td>@o.StoreIn</td>
                    <td>@o.Note</td>
                    <td>@o.Status</td>
                    <td class="text-end">
                        @if (o.CanCancel)
                        {
                            <form method="post" asp-page-handler="Cancel" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="orderId" value="@o.OrderId" />
                                <input type="hidden" name="headId" value="@(o.HeadId?.ToString() ?? "")" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Снять заказ</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-secondary">У вас пока нет заказов.</div>
}
