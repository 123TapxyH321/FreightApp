@page
@model DriverOrdersModel
@{
    ViewData["Title"] = "Заказы водителя";
}

<h2>Предложенные заказы</h2>
@if (Model.OfferedOrders.Any())
{
    <table class="table table-sm table-striped align-middle">
        <thead>
            <tr>
                <th>Откуда</th>
                <th>Куда</th>
                <th>Описание</th>
                <th>Дата</th>
                <th>Статус</th>
                <th class="text-end">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model.OfferedOrders)
            {
                <tr>
                    <td>@o.StoreOut</td>
                    <td>@o.StoreIn</td>
                    <td>@o.Note</td>
                    <td>@o.DateOrder.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@o.Status</td>
                    <td class="text-end">
                        <form method="post" asp-page-handler="AcceptOffer" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="orderId" value="@o.OrderId" />
                            <input type="hidden" name="headId" value="@o.HeadId" />
                            <button type="submit" class="btn btn-sm btn-success">Принять</button>
                        </form>
                        <form method="post" asp-page-handler="RejectOffer" class="d-inline ms-1">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="orderId" value="@o.OrderId" />
                            <input type="hidden" name="headId" value="@o.HeadId" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">Отклонить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
     <div class="alert alert-secondary">Нет предложенных заказов.</div>
}

<hr />
<h2>Мои заказы</h2>
@if (Model.MyOrders.Any())
{
    <table class="table table-sm table-hover align-middle">
        <thead>
            <tr>
                <th>Откуда</th>
                <th>Куда</th>
                <th>Описание</th>
                <th>Дата</th>
                <th>Статус</th>
                <th class="text-end">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model.MyOrders)
            {
                var rowClass = o.Status switch
                {
                    "Отклонён водителем" => "table-danger",
                    "Принят водителем" => "table-warning",
                    "В пути" => "table-warning",
                    "Доставлен" => "table-success",
                    _ => ""
                };
                <tr class="@rowClass">
                    <td>@o.StoreOut</td>
                    <td>@o.StoreIn</td>
                    <td>@o.Note</td>
                    <td>@o.DateOrder.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@o.Status</td>
                    <td class="text-end">
                        @if (o.Status == "Принят водителем")
                        {
                            <form method="post" asp-page-handler="RejectMy" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="orderId" value="@o.OrderId" />
                                <input type="hidden" name="headId" value="@o.HeadId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Отказаться</button>
                            </form>
                            <form method="post" asp-page-handler="StartMy" class="d-inline ms-1">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="orderId" value="@o.OrderId" />
                                <input type="hidden" name="headId" value="@o.HeadId" />
                                <button type="submit" class="btn btn-sm btn-primary">Приступить</button>
                            </form>
                        }
                        @if (o.Status == "В пути")
                        {
                            <form method="post" asp-page-handler="CompleteMy" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="orderId" value="@o.OrderId" />
                                <input type="hidden" name="headId" value="@o.HeadId" />
                                <button type="submit" class="btn btn-sm btn-success">Завершить</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
     <div class="alert alert-secondary">Нет активных заказов.</div>
}
